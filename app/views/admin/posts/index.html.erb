<table class="table table-striped table-hover">
    <tr>
        <td>#</td>
        <td>Title</td>
        <td>Author</td>
        <td>Published at</td>
        <td>Actions</td>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <th><%= post.id %></th>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.pulished_at %></td>
        <td>
            <%= link_to  "Edit", edit_admin_post_path(post) %>
            <%= link_to  "Delete", admin_post_path(post), method: :delete %>
        </td>
    </tr>
    <% end %>
</table>