    <div class="blog-header">
        <h1 class="blog-title">Sign up</h1>
    </div>

<%= form_for( @user, url: sign_up_path ) do |f| %>
    <div class="form-group">
        <label for="user_email">Email Address</label>
        <%= f.email_field :email, class: 'form-control', placeholder:'Email' %>
    </div>

    <div class="form-group">
        <label for="user_nickname">nickname Address</label>
        <%= f.text_field :nickname, class: 'form-control', placeholder:'nickname' %>
    </div>
    <div class="form-group">
        <label for="user_password">password Address</label>
        <%= f.password_field :password, class: 'form-control', placehoder:'Password'%>
    </div>
    <div class="form-group">
        <label for="user_password">password Confirmation</label>
        <%= f.password_field :password_confirmation, class: 'form-control', placehoder:'Password confirmation'%>
    </div>

    <%= f.submit 'Sign up', class:'btn btn-default' %>
<% end %>